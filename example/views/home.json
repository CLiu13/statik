{
  "path": "/",
  "template": "home.html",
  "context": {
    "title": "Welcome to my blog",
    "posts": {
      "$": {
        "model": "Post",
        "filter": [
          {
            "draft": 0
          }
        ],
        "orderBy": [
          {
            "published": "desc"
          },
          {
            "title": "asc"
          }
        ],
        "limit": 10,
        "relatedDepth": 1
      }
    }
  }
}
